<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="feedItem"
            type="com.vk.api.views.feed.FeedItemViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/post_user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:url="@{feedItem.postUserImg}" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="@{feedItem.postUserText}" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/post_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_user_info"
                        android:layout_margin="5dp"
                        android:autoLink="all"
                        android:text="@{feedItem.text}" />

                    <ImageView
                        android:id="@+id/photo_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="fitCenter"
                        android:visibility="@{feedItem.photoAttachmentVisibility}"
                        app:attachmentUrl="@{feedItem.attachmentImg}" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/photo_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/photo_img"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:visibility="@{feedItem.photoAttachmentsRecyclerVisibility}"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:photoAdapter="@{feedItem.photoAdapter}"
                        app:spanCount="3" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/link_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/photo_recycler"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:visibility="@{feedItem.getLinkAttachmentsRecyclerVisibility}"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:linkAdapter="@{feedItem.linkAdapter}" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/audio_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/link_recycler"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:visibility="@{feedItem.getAudioAttachmentsRecyclerVisibility}"
                        app:audioAdapter="@{feedItem.audioAdapter}"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/audio_recycler"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_favorite_black_48" />

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@{String.valueOf(feedItem.likesCount)}" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_chat_bubble_black_48" />

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@{String.valueOf(feedItem.commentsCount)}" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</layout>